<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="parrtim.applicationfundamentals.SMS.SMSMessageParent"
    android:orientation="vertical">
    
    <fragment
        android:id="@+id/messages_fragment"
        android:name="parrtim.applicationfundamentals.InboxFragment"
        tools:layout="@layout/fragment_inbox_list"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/response_fragment"
        app:layout_constraintLeft_toLeftOf="parent" />

    <fragment
        android:id="@+id/response_fragment"
        android:name="parrtim.applicationfundamentals.SMS.SMSMessageFragment"
        tools:layout="@layout/fragment_smsmessage"
        android:layout_width="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>
